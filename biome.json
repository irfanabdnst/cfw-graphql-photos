{
    "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": "warn",
                "noUnusedImports": "warn"
            },
            "style": {
                "useImportType": "warn"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "lineWidth": 100,
        "indentWidth": 4,
        "indentStyle": "space"
    },
    "javascript": {
        "formatter": {
            "trailingCommas": "all",
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "semicolons": "always"
        }
    }
}
